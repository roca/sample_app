<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_url, :rel => "external",:remote => false ) do |f| %>
  <div class="field">
    <%= f.label :email %> or <b>Username</b><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" ,  :class => "submit" %>
  </div>
<% end %>
